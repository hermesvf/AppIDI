<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="3dp"
                card_view:cardCornerRadius="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_centerHorizontal="true"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:id="@+id/imagePerfil"
                        android:src="@drawable/senior" />

                    <TextView
                        android:id="@+id/nameMarc"
                        android:layout_margin="5dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/imagePerfil"
                        android:text="Marc Benedí San Millán"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textAlignment="center" />

                    <ImageView
                        android:id="@+id/twitterMarc"
                        android:layout_below="@id/nameMarc"
                        android:layout_centerHorizontal="true"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/twitter128"/>

                </RelativeLayout>


            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="3dp"
                card_view:cardCornerRadius="2dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_centerHorizontal="true"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:id="@+id/imagePerfil2"
                        android:src="@drawable/junior" />

                    <TextView
                        android:layout_margin="5dp"
                        android:id="@+id/nameHermes"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/imagePerfil2"
                        android:text="Hermes Valenciano Farré"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textAlignment="center" />

                    <ImageView
                        android:id="@+id/twitterHermes"
                        android:layout_below="@id/nameHermes"
                        android:layout_centerHorizontal="true"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/twitter128"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_margin="6dp"
            card_view:cardCornerRadius="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_description"
                android:lineSpacingExtra="4sp"
                android:textSize="16sp" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>